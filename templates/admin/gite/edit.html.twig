{% extends "dashboard.html.twig" %}

{% block title %}
	{{ title }}
{% endblock %}

{% block body %}

	<h1>
		{{ title_page }}
	</h1>

    {{ form_start(formGite) }}

        <div class="row">
            <div class="col-md-6">
                {{ form_row(formGite.nom) }}
            </div>
            <div class="col-md-6">
                {{ form_row(formGite.description) }}
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                {{ form_row(formGite.surface) }}
                {{ form_row(formGite.chambre) }}
                {{ form_row(formGite.couchage) }}
            </div>
            <div class="col-md-6">
                {{ form_row(formGite.equipements) }}
            </div>
        </div>
        <div class="form-group">
            <button class="btn btn-primary" type="submit">Modifier</button>
            <button class="btn btn-danger" type="reset">Annuler</button>
        </div>

    {{ form_end(formGite) }}

{% endblock %}